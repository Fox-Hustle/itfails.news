source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"
gem "jekyll-seo-tag", "~> 2.7"           # SEO metadata
gem "jekyll-sitemap", "~> 1.4.0"         # Sitemap generation
gem "jekyll-feed", "~> 0.15"             # RSS feed generation
gem "jekyll-paginate-v2", "~> 3.0"       # Advanced pagination
gem "jekyll-analytics", "~> 1.0"         # Google Analytics integration
gem "jekyll-algolia", "~> 1.6"           # Algolia search integration
gem "jekyll-news-sitemap", "~> 0.3.0"    # News sitemap for Google News

group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-paginate-v2"
  gem "jekyll-analytics"
  gem "jekyll-algolia"
  gem "jekyll-news-sitemap"
end
